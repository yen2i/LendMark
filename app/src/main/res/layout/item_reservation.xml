<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 상단: 건물 + 상태 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvBuildingRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frontier Hall 107"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approved"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:background="@drawable/bg_status_green"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <!-- 날짜와 시간 -->
        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-10-15 • 13:00 - 15:00"
            android:layout_marginTop="8dp"
            android:textColor="@color/gray_dark" />

        <!-- 참석/목적 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvAttendees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendees: 5"
                android:textColor="@color/gray_dark"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tvPurpose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purpose: Team project"
                android:textColor="@color/gray_dark"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <!-- 버튼: 취소 / 정보등록 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Cancel Reservation"
                android:textColor="#E53935"
                app:strokeColor="#E53935"
                app:cornerRadius="8dp" />

            <Button
                android:id="@+id/btnRegisterInfo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Register Classroom Info"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/white"
                android:backgroundTint="#190848"
                app:cornerRadius="8dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
